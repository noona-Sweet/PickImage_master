<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="3dp"
    app:contentPadding="5dp"
    app:cardBackgroundColor="#fff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:background="#FFFC99"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgiicon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:srcCompat="@mipmap/bunyanlogo" />

        <LinearLayout
            android:layout_width="293dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="268dp"
                    android:layout_height="42dp">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:text="Title: "
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="214dp"
                        android:layout_height="25dp"
                        android:text="Title Here:"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="268dp"
                    android:layout_height="42dp">

                    <TextView
                        android:id="@+id/desc1"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="Description: "
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/desc2"
                        android:layout_width="214dp"
                        android:layout_height="25dp"
                        android:text="  Description Here:"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="268dp"
                    android:layout_height="42dp">

                    <TextView
                        android:id="@+id/phone1"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:text="Phone No: "
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/phone2"
                        android:layout_width="214dp"
                        android:layout_height="35dp"
                        android:text="Phone Here:"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="12sp" />
                </TableRow>


            </TableLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/viewicon"
                    android:layout_width="49dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:onClick="Viewing"
                    android:src="@drawable/view_icon" />

                <ImageView
                    android:id="@+id/particon"
                    android:layout_width="49dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="top"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="162dp"
                    android:onClick="participateh"
                    android:src="@drawable/part_icon" />

                <ImageView
                    android:id="@+id/recoicon"
                    android:layout_width="49dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="top"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="114dp"
                    android:src="@drawable/recomm_icon" />


                <ImageView
                    android:id="@+id/accepticon"
                    android:layout_width="49dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="top"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="39dp"
                    android:src="@drawable/accept_icon" />

                <TextView
                    android:id="@+id/counts"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="48dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginEnd="210dp"
                    android:layout_marginRight="210dp"
                    android:text="0"
                    android:textSize="18sp" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>