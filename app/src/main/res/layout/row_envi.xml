<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="3dp"
    app:contentPadding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="#B1EFA5"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgenvi"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bunyanlogo" />

        <LinearLayout
            android:layout_width="293dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="268dp"
                    android:layout_height="42dp">

                    <TextView
                        android:id="@+id/titleen"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:text="Title: "
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/titleen2"
                        android:layout_width="214dp"
                        android:layout_height="25dp"
                        android:text="Title Here:"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="268dp"
                    android:layout_height="42dp">

                    <TextView
                        android:id="@+id/descen1"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="Description: "
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/descen2"
                        android:layout_width="214dp"
                        android:layout_height="25dp"
                        android:text="  Description Here:"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="268dp"
                    android:layout_height="42dp">

                    <TextView
                        android:id="@+id/phonen1"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:text="Phone No: "
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/phonen2"
                        android:layout_width="214dp"
                        android:layout_height="35dp"
                        android:text="Phone Here:"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="12sp" />
                </TableRow>


            </TableLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/viewenvi"
                    android:layout_width="49dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:onClick="Viewing"
                    android:src="@drawable/view_icon" />

                <ImageView
                    android:id="@+id/partenvi"
                    android:layout_width="49dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="top"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="162dp"
                    android:onClick="participaten"
                    android:src="@drawable/part_icon" />

                <ImageView
                    android:id="@+id/recoenvi"
                    android:layout_width="49dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="top"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="114dp"
                    android:onClick="Recomendedn"
                    android:src="@drawable/recomm_icon" />


                <ImageView
                    android:id="@+id/acceptenvi"
                    android:layout_width="49dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="top"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="39dp"
                    android:onClick="Acceptablen"
                    android:src="@drawable/accept_icon" />

                <TextView
                    android:id="@+id/countsen"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="48dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginEnd="210dp"
                    android:layout_marginRight="210dp"
                    android:text="0"
                    android:textSize="18sp" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>
